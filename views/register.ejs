<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>



<body>

    <ul>
        <% if (typeof errors !='undefined' ) { %>
            <% errors.forEach(error=> { %>
                <li>
                    <%= error.message %>
                </li>
                <% }) %>
                    <% } %>
    </ul>

    <img src="../img/elementhaut_connexion.png">
    <img src="../img/logo success lab 2.jpg" class="img_logo">


    <form action="/users/register" method="POST">

        <div class="child">
            <input type="text" id="name" name="name" placeholder="Nom" required>
        </div>

        <div class="child">
            <input type="email" id="email" name="email" placeholder="Adresse Mail" required>
        </div>

        <div class="child">
            <input type="password" id="password" name="password" placeholder="Mot de passe" required>
        </div>

        <div class="child">
            <input type="password" id="password2" name="password2" placeholder="Confirmer le mot de passe" required>
        </div>

        <div class="child">
            <input type="submit" value="Inscription" id="submit"/>
        </div>

        <div class="child">
            <a href="/users/login"> Se connecter</a>
        </div>
    </form>

    <img src="../img/elementbas_connexion.png" >

</body>

</html>


